@model MovieApp.Models.MovieGenreViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Movie list</h1>

<p>
    <a class="btn btn-primary mb-2 " asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="form-group row">
        <div class="form-inline">
            <input class="col-sm-2 col-form-label" type="text" name="SearchString" placeholder="Title"/>
            <input class="btn btn-primary mb-2" type="submit" value="Filter" />
        </div>

        <div class="form-group">
            <select class="col-sm-2 col-form-label" asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">Genre</option>
            </select>
        </div>
    </div>
</form>

<table class="table">
    <thead class="table-secondary">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th scope="col"> 
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a class="btn btn-info btn-sm"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-warning btn-sm"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
